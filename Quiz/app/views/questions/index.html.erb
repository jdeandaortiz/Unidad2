<h1>Lista de Preguntas</h1>
<p>Total: <%= @questions.size %></p>
<p><%= link_to'Agregar Pregunta', new_question_path, :class => 'btn btn-success' %></p>
<table class="table">
  <tr>
    <th>Pregunta</th>
    <th>Opciones</th>
    <th colspan="3">Acciones</th>
  </tr>
  <% @questions.each do |question| %>
  <tr>
    <td><%= question.text %></td>
    <td>
      <ul>
        <% question.choices.each do |choice| %>
        <li>
          <%= choice.text %>
          <% if choice.correct == 1 %> (correct) <% end %>
        </li>
        <% end %>
      </ul>
    </td>
    <td><%= link_to 'Consultar', question, :class => 'btn btn-info' %></td>
    <td><%= link_to 'Editar', edit_question_path(question), :class => 'btn btn-warning' %></td>
    <td><%= link_to 'Eliminar', question, :confirm => 'Â¿Estas seguro que desea eliminar?', :method => :delete, :class => 'btn btn-danger' %></td>
  </tr>
      <% end %>
</table>
<% content_for(:title) do %>
All questions
<% end %>
