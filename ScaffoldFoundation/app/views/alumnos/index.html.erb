<p id="notice"><%= notice %></p>

<h1>Alumnos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Numero control</th>
      <th>Carrera</th>
      <th>Anio ingreso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>
        <td><%= alumno.nombre %></td>
        <td><%= alumno.numero_control %></td>
        <td><%= alumno.carrera %></td>
        <td><%= alumno.anio_ingreso %></td>
        <td><%= link_to 'Show', alumno, class:'button radius' %></td>
        <td><%= link_to 'Edit', edit_alumno_path(alumno), class:'button radius success' %></td>
        <td><%= link_to 'Destroy', alumno, method: :delete, data: { confirm: 'Are you sure?' }, class:'button radius alert' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alumno', new_alumno_path, class:'button round success' %>
